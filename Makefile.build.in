# lablgtk and lablgtk2 are out of LIBRARYDIRS, since they share some
# module names.

LIBRARYDIRS=ppm bmp xvthumb jpeg tiff gif png xpm ps graphics freetype

BUILDDIRS=$(COREDIR) $(LIBRARYDIRS) $(LABLGTKIMGDIR) $(LABLGTK2IMGDIR)
